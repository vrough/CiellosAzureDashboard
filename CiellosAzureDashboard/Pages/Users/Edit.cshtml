@page "{id:int}"
@model CiellosAzureDashboard.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.UserId" />
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                <input asp-for="User.UserName" class="form-control" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.IsSuperUser" class="control-label"></label>
                <input asp-for="User.IsSuperUser" class="checkbox" />
                <span asp-validation-for="User.IsSuperUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Dashboard" class="control-label"></label>
                <select asp-for="SelectedDashboard.DashboardId" asp-items="@Model.Dashboards" class="form-control"></select>
                <span asp-validation-for="User.Dashboard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

